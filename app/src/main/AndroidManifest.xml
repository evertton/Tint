<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.evertton.tint">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CriarPaletaActivity"
            android:label="@string/title_activity_criar_paleta"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdicionarCorActivity"
            android:label="@string/title_activity_adicionar_cor"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MostrarPaletaActivity"
            android:label="@string/title_activity_mostrar_paleta"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CorActivity"
            android:label="@string/title_activity_cor"
            android:parentActivityName=".MostrarPaletaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HexToRgbActivity"
            android:parentActivityName=".MostrarPaletaActivity" />
        <activity
            android:name=".RgbToHexActivity"
            android:parentActivityName=".MostrarPaletaActivity" />
    </application>

</manifest>
